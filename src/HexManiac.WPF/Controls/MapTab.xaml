                        <local:AngleButton Content="Create" Direction="Right" Grid.Row="8" Grid.Column="5"
                                           ToolTip="{Binding CreatePrimaryTilesetAnimationsText}" Command="{Binding CreateSecondaryTilesetAnimations}" />
