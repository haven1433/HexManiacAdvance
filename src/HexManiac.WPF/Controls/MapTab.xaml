                              <Style TargetType="local:TextEditor" BasedOn="{StaticResource {x:Type local:TextEditor}}">
                                 <Setter Property="HorizontalAlignment" Value="Right" />
                                 <Setter Property="Width" Value="244" />
                              </Style>
