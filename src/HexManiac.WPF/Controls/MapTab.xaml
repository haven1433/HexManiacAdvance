                  <LineBreak />
                  <Run Text="(" />
                  <Run Text="{Binding PaletteSelection, Mode=OneWay}" />
                  <Run Text=")" />
               </TextBlock>
               <ComboBox ItemsSource="{Binding Palettes}" SelectedIndex="{Binding PaletteSelection}" />
