                              </ToolTip>
                           </Setter.Value>
                        </Setter>
                        <Setter Property="ToolTipService.InitialShowDelay" Value="0" />
                     </DataTrigger>
                  </Style.Triggers>
               </Style>
            </local:AngleButton.Style>
         </local:AngleButton>
